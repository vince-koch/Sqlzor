@page "/"

@using Sqlzor.Api;

@inject NavigationManager _navigationManager;
@inject ISessionService _sessionService;

<div class="top-row px-4">
    <h3>New Connection</h3>
</div>
<div class="content px-4">
    <ConnectionProperties OnConnected="HandleConnected" />
</div>

@code {
    private void HandleConnected(Guid sessionId)
    {
        _navigationManager.NavigateTo($"session/{sessionId}", true);        
    }
}